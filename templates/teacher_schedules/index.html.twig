{% extends 'base.html.twig' %}

{% block title %}Schedules index{% endblock %}

{% block body %}
    <h1>Schedules index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DayWeek</th>
                <th>Beginning</th>
                <th>Ending</th>
                <th>Editable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.id }}</td>
                <td>{{ schedule.DayWeek ? schedule.DayWeek|date('Y-m-d') : '' }}</td>
                <td>{{ schedule.beginning ? schedule.beginning|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ schedule.ending ? schedule.ending|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ schedule.editable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_teacher_schedules_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('app_teacher_schedules_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_teacher_schedules_new') }}">Create new</a>
{% endblock %}
