{% extends 'base.html.twig' %}

{% block title %}Schedules{% endblock %}

{% block body %}
    <h1>Schedules</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schedule.id }}</td>
            </tr>
            <tr>
                <th>DayWeek</th>
                <td>{{ schedule.DayWeek ? schedule.DayWeek|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Beginning</th>
                <td>{{ schedule.beginning ? schedule.beginning|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ending</th>
                <td>{{ schedule.ending ? schedule.ending|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Editable</th>
                <td>{{ schedule.editable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_teacher_schedules_index') }}">back to list</a>

    <a href="{{ path('app_teacher_schedules_edit', {'id': schedule.id}) }}">edit</a>

    {{ include('teacher_schedules/_delete_form.html.twig') }}
{% endblock %}
