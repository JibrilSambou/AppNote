{% extends 'base.html.twig' %}

{% block title %}Courses index{% endblock %}

{% block body %}
    <h1>Courses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Statuts</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.Subject }}</td>
                <td>{{ course.statuts }}</td>
                <td>{{ course.status }}</td>
                <td>
                    <a href="{{ path('app_teacher_courses_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('app_teacher_courses_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_teacher_courses_new') }}">Create new</a>
{% endblock %}
