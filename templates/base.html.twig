<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}MyPronote{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/sidebar.css"> <!-- Optionnel : Ajouter du CSS personnalisé pour la sidebar -->
    {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}
</head>
<body>
    <div class="d-flex">
        <!-- Barre latérale -->
        <nav id="sidebar" class="bg-light border-right">
            <div class="sidebar-header p-3">
                <a href="{{ path('home') }}">
        
                </a>
            </div>
            <ul class="list-unstyled components p-3">
                <li>
                    <a href="{{ path('home') }}" class="nav-link">Home</a>
                </li>
                <li>
                    <a href="#" class="nav-link">Students</a>
                </li>
                <li>
                    <a href="#" class="nav-link">Teachers</a>
                </li>
                <li>
                    <a href="#" class="nav-link">Admin</a>
                </li>
                {% if app.user %}
                    <li>
                        <a href="#" class="nav-link">Profil</a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}" class="nav-link">Logout</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_login') }}" class="nav-link">Login</a>
                    </li>
                    <li>
                        <a href="{{ path('app_register') }}" class="nav-link">app_register</a>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <!-- Contenu principal -->
        <div id="main-content" class="flex-grow-1 p-3">
            <header class="d-flex justify-content-between align-items-center mb-4">
                
            </header>

            {% block body %}{% endblock %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
            {{ encore_entry_script_tags('app') }}
</body>
</html>
