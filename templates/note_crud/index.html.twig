{% extends 'base.html.twig' %}

{% block title %}Notes index{% endblock %}

{% block body %}
    <h1>Notes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Subject</th>
                <th>DateAdded</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.note }}</td>
                <td>{{ note.Subject }}</td>
                <td>{{ note.dateAdded ? note.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_note_crud_show', {'id': note.id}) }}">show</a>
                    <a href="{{ path('app_note_crud_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_note_crud_new') }}">Create new</a>
{% endblock %}
